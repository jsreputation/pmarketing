{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": [
      "jest",
      "node"
    ],
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "typeRoots": [
      "node_modules/@types",
      "../../node_modules/@types"
    ]
  },
  "files": [
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}