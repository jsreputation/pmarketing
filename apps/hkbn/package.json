{
  "name": "@perxtech/hkbn",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "env-cmd -f env/hkbn.staging.dev npm run config && ng serve",
    "start:prod": "env-cmd -f env/hkbn.production.dev npm run config && ng serve",
    "build": "npm run config && ng build",
    "build:hkbn:production": "env-cmd -f env/hkbn.production npm run config && ng build --prod",
    "build:hkbn:staging": "env-cmd -f env/hkbn.staging npm run config && ng build --prod",
    "clean": "rm -rf ./dist ./node_modules",
    "config": "ts-node --project tsconfig.node.json set-env.ts",
    "lint": "stylelint \"src/**/*.*css\" && ng lint",
    "lint:fix": "stylelint \"src/**/*.*css\" --fix && eslint \"./src/**/*.ts\" --fix",
    "test": "jest --config=jest.config.json",
    "test:watch": "jest --watch --config=jest.config.json"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~8.0.0",
    "@angular/common": "~8.0.0",
    "@angular/compiler": "~8.0.0",
    "@angular/core": "~8.0.0",
    "@angular/forms": "~8.0.0",
    "@angular/material": "~8.0.1",
    "@angular/platform-browser": "~8.0.0",
    "@angular/platform-browser-dynamic": "~8.0.0",
    "@angular/router": "~8.0.0",
    "@ngx-translate/core": "^11.0.1",
    "@ngx-translate/http-loader": "^4.0.0",
    "@perxtech/core": "^0.0.0",
    "angular2-text-mask": "^9.0.0",
    "angularx-qrcode": "^1.6.4",
    "hammerjs": "^2.0.8",
    "ngx-infinite-scroll": "^8.0.1",
    "rxjs": "~6.4.0",
    "text-mask-addons": "^3.8.0",
    "tslib": "^1.9.0",
    "zone.js": "~0.9.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.800.0",
    "@angular/cli": "~8.0.0",
    "@angular/compiler-cli": "~8.0.0",
    "@angular/language-service": "~8.0.0",
    "@types/jest": "25.1.2",
    "@types/node": "~10.14.13",
    "@typescript-eslint/eslint-plugin": "~2.3.0",
    "@typescript-eslint/eslint-plugin-tslint": "~2.3.0",
    "@typescript-eslint/parser": "^2.3.0",
    "codelyzer": "^5.0.0",
    "eslint": "~6.4.0",
    "jest": "25.1.0",
    "jest-preset-angular": "8.0.0",
    "protractor": "~5.4.0",
    "ts-node": "~8.3.0",
    "tslint": "~5.19.0",
    "tslint-consistent-codestyle": "^1.15.1",
    "tslint-no-focused-test": "^0.5.0",
    "typescript": "~3.4.3"
  }
}
