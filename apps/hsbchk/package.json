{
    "name": "@perx/hsbc-hk-life",
    "version": "0.0.0",
    "scripts": {
        "ng": "ng",
        "start-zh": "DEFAULT_LANG=zh npm run config && ng serve",
        "start-ru": "DEFAULT_LANG=ru npm run config && ng serve",
        "build": "npm run config && ng build",
        "build:hsbchk:staging": "PREAUTH=true APIHOST=https://api.perxtech.io IS_WHISTLER=false PRODUCTION=true npm run config && ng build --prod",
        "build:hsbchk:prod": "PREAUTH=true APIHOST=https://api.perxtech.net IS_WHISTLER=false PRODUCTION=true npm run config && ng build --prod",
        "config": "ts-node --project tsconfig.node.json set-env.ts",
        "test": "jest",
        "lint": "stylelint \"src/**/*.*css\" && eslint \"./src/**/*.ts\"",
        "lint:fix": "stylelint \"src/**/*.*css\" --fix && eslint \"./src/**/*.ts\" --fix",
        "e2e": "ng e2e",
        "start": "PREAUTH=false APIHOST=https://api.perxtech.io IS_WHISTLER=false SHOW_USER_QR=true SHOW_ACCOUNTS_PAGE=true SHOW_HOME_PAGE=true SHOW_HISTORY_PAGE=true SHOW_USERINFO_ACCOUNTS=true SHOW_TRANSANCTION_HISTORY_ACCOUNTS=true SHOW_EXPIRY_REWARD_DETAIL=true SHOW_LOGIN_SUBTITLE=true REDIRECT_AFTER_LOGIN=/home npm run config && ng serve --host 0.0.0.0",
        "test:watch": "jest --watch"
    },
    "private": true,
    "dependencies": {
        "@angular/animations": "~8.0.0",
        "@angular/common": "~8.0.0",
        "@angular/compiler": "~8.0.0",
        "@angular/core": "~8.0.0",
        "@angular/forms": "~8.0.0",
        "@angular/material": "~8.0.1",
        "@angular/platform-browser": "~8.0.0",
        "@angular/platform-browser-dynamic": "~8.0.0",
        "@angular/router": "~8.0.0",
        "@angular/service-worker": "~8.0.0",
        "@ngx-translate/core": "^11.0.1",
        "@ngx-translate/http-loader": "^4.0.0",
        "@perxtech/blackcomb-pages": "^0.0.0",
        "@perxtech/core": "^0.0.0",
        "@sentry/browser": "^5.10.1",
        "ngx-infinite-scroll": "^8.0.1",
        "rxjs": "~6.4.0",
        "tslib": "^1.9.0",
        "zone.js": "~0.9.1"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "~0.800.0",
        "@angular/cli": "~8.0.0",
        "@angular/compiler-cli": "~8.0.0",
        "@angular/language-service": "~8.0.0",
        "@types/jest": "25.1.2",
        "@types/node": "~10.14.13",
        "@typescript-eslint/eslint-plugin": "~2.3.0",
        "@typescript-eslint/eslint-plugin-tslint": "~2.3.0",
        "@typescript-eslint/parser": "^2.3.0",
        "codelyzer": "^5.0.0",
        "eslint": "~6.4.0",
        "jest": "25.1.0",
        "jest-preset-angular": "8.0.0",
        "protractor": "~5.4.0",
        "stylelint": "^10.1.0",
        "stylelint-config-standard": "^18.3.0",
        "ts-node": "~8.3.0",
        "tslint": "~5.19.0",
        "tslint-consistent-codestyle": "^1.15.1",
        "tslint-no-focused-test": "^0.5.0",
        "typescript": "~3.4.3"
    },
    "jest": {
        "preset": "jest-preset-angular",
        "roots": [
            "src"
        ],
        "transformIgnorePatterns": [
            "node_modules/(?!ngx-barcode)"
        ],
        "transform": {
            "^.+\\.(ts|js|html)$": "ts-jest"
        },
        "setupFilesAfterEnv": [
            "<rootDir>/src/setup-jest.ts"
        ],
        "moduleNameMapper": {},
        "globals": {
            "ts-jest": {
                "tsConfig": "<rootDir>/tsconfig.spec.json",
                "stringifyContentPathRegex": "\\.html$",
                "astTransformers": [
                    "jest-preset-angular/build/InlineFilesTransformer",
                    "jest-preset-angular/build/StripStylesTransformer"
                ]
            }
        }
    }
}
