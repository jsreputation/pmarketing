{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "perx-chart": {
      "projectType": "library",
      "root": "projects/perx-chart",
      "sourceRoot": "projects/perx-chart/src",
      "prefix": "pc",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "projects/perx-chart/tsconfig.lib.json",
            "project": "projects/perx-chart/ng-package.json"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/perx-chart/src/test.ts",
            "tsConfig": "projects/perx-chart/tsconfig.spec.json",
            "karmaConfig": "projects/perx-chart/karma.conf.js"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "projects/perx-chart/tsconfig.lib.json",
              "projects/perx-chart/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }},
  "defaultProject": "perx-chart",
  "schematics": {
    "@schematics/angular:component": {
      "styleext": "scss"
    }
  }
}