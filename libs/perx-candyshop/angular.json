{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "perx-candyshop": {
      "projectType": "library",
      "root": "projects/perx-candyshop",
      "sourceRoot": "projects/perx-candyshop/src",
      "prefix": "cs",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "projects/perx-candyshop/tsconfig.lib.json",
            "project": "projects/perx-candyshop/ng-package.json"
          }
        },
      }
    }
  },
  "defaultProject": "perx-candyshop",
  "schematics": {
    "@schematics/angular:component": {
      "style": "scss"
    }
  }
}