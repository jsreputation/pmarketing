{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "whistler": {
      "projectType": "library",
      "root": "projects/whistler",
      "sourceRoot": "projects/whistler/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "projects/whistler/tsconfig.lib.json",
            "project": "projects/whistler/ng-package.json"
          }
        },
        "test": {
          "builder": "@nrwl/jest:jest",
          "options": {
            "jestConfig": "jest.config.js",
            "tsConfig": "projects/whistler/tsconfig.spec.json",
            "passWithNoTests": true
          }
        },
        "lint": {
          "builder": "@nrwl/linter:lint",
          "options": {
            "linter": "eslint",
            "config": ".eslintrc",
            "files": ["projects/**/*.ts"]
          }
        }
      }
    }
  },
  "defaultProject": "whistler"
}
