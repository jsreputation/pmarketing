{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "perx-core": {
      "projectType": "library",
      "root": "projects/perx-core",
      "sourceRoot": "projects/perx-core/src",
      "prefix": "perx-core",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "projects/perx-core/tsconfig.lib.json",
            "project": "projects/perx-core/ng-package.json"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "projects/perx-core/tsconfig.lib.json",
              "projects/perx-core/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }
  },
  "defaultProject": "perx-core",
  "schematics": {
    "@schematics/angular:component": {
      "styleext": "scss"
    }
  }
}