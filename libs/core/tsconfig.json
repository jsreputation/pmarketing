{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "target": "es2015",
    "plugins": [
      {
        "transform": "ts-optchain/transform"
      }
    ],
    "typeRoots": ["../../node_modules/@types"],
    "lib": ["es2018", "dom"]
  },
  "extends": "../../tsconfig.json"
}
