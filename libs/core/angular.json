{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "core": {
      "projectType": "library",
      "root": "projects/perx-core",
      "sourceRoot": "projects/perx-core/src",
      "prefix": "perx-core",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "projects/perx-core/tsconfig.lib.json",
            "project": "projects/perx-core/ng-package.json"
          }
        },
        "test": {
          "builder": "@nrwl/jest:jest",
          "options": {
            "jestConfig": "jest.config.json",
            "tsConfig": "tsconfig.spec.json",
            "passWithNoTests": true,
            "setupFile": "projects/setup-jest.ts"
          }
        },
        "lint": {
          "builder": "@nrwl/linter:lint",
          "options": {
            "linter": "eslint",
            "config": ".eslintrc",
            "files": ["projects/**/*.ts"]
          }
        }
      }
    }
  },
  "defaultProject": "core",
  "schematics": {
    "@schematics/angular:component": {
      "styleext": "scss"
    }
  }
}
