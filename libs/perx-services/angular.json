{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "perx-services": {
      "projectType": "library",
      "root": "projects/perx-services",
      "sourceRoot": "projects/perx-services/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "projects/perx-services/tsconfig.lib.json",
            "project": "projects/perx-services/ng-package.json"
          }
        }
      }
    }
  },
  "defaultProject": "perx-services"
}