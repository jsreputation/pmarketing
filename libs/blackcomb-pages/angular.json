{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "blackcomb-pages": {
      "projectType": "library",
      "root": "projects/perx-blackcomb-pages",
      "sourceRoot": "projects/perx-blackcomb-pages/src",
      "prefix": "perx-blackcomb-pages",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "projects/perx-blackcomb-pages/tsconfig.lib.json",
            "project": "projects/perx-blackcomb-pages/ng-package.json"
          }
        },
        "test": {
          "builder": "@nrwl/jest:jest",
          "options": {
            "jestConfig": "jest.config.json",
            "tsConfig": "projects/perx-blackcomb-pages/tsconfig.spec.json",
            "passWithNoTests": true,
            "setupFile": "projects/setup-jest.ts"
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "eslintConfig": ".eslintrc",
            "files": [
              "projects/**/*.ts"
            ]
          }
        }
      }
    }
  },
  "defaultProject": "blackcomb-pages",
  "schematics": {
    "@schematics/angular:component": {
      "styleext": "scss"
    }
  }
}